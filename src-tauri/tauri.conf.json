{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-utils/schema.json",
  "productName": "Music Looper",
  "version": "0.1.0",
  "identifier": "com.music-looper.app",
  "build": {
    "beforeDevCommand": "pnpm -C frontend dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm -C frontend build",
    "frontendDist": "../frontend/out"
  },
  "app": {
    "windows": [
      {
        "title": "Music Looper",
        "width": 1000,
        "height": 750,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/music-looper-sidecar"
    ]
  }
}
