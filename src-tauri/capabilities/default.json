{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "args": true,
          "name": "binaries/music-looper-sidecar",
          "sidecar": true
        }
      ]
    },
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-read-file",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$TEMP/**" },
        { "path": "$HOME/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$AUDIO/**" }
      ]
    }
  ]
}
